def user_login(accounts):
    acc_no = input("Enter Account Number: ")
    if acc_no not in accounts:
        print("Account does not exist.")
        return None
    if accounts[acc_no]["blocked"]:
        print("Account is blocked. Contact admin.")
        return None

    attempts = 0
    while attempts < 2:
        pin = input("Enter PIN: ")
        if pin == accounts[acc_no]["pin"]:
            print("Login successful.")
            return acc_no
        attempts += 1
        print("Wrong PIN.")

    accounts[acc_no]["blocked"] = True
    save_accounts(accounts)
    print("Account blocked due to multiple failed login attempts.")
    return None
def transfer_money(accounts, sender_acc):
    receiver_acc = input("Enter receiver account number: ")
    if receiver_acc not in accounts:
        print("Receiver account does not exist.")
        return
    if receiver_acc == sender_acc:
        print("Cannot transfer to your own account.")
        return

    amount = float(input("Enter transfer amount: "))
    if amount <= 0:
        print("Invalid amount.")
        return
    if amount > accounts[sender_acc]["balance"]:
        print("Insufficient balance.")
        return

    accounts[sender_acc]["balance"] -= amount
    accounts[receiver_acc]["balance"] += amount
    accounts[sender_acc]["history"].append(f"Transferred {amount} to {receiver_acc}")
    accounts[receiver_acc]["history"].append(f"Received {amount} from {sender_acc}")
    save_accounts(accounts)
    print("Transfer successful.")

def check_balance(accounts, acc_no):
    print("Current Balance:", accounts[acc_no]["balance"])
def view_history(accounts, acc_no):
    print("Transaction History:")
    if not accounts[acc_no]["history"]:
        print("No transactions.")
    else:
        for h in accounts[acc_no]["history"]:
            print(h)

    